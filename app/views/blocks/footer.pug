                    .footer__top__right
                        input.footer__top__input(type='text')
                        button.footer__top__btn
                            i.fa.fa-paper-plane-o
    .footer__middle
        .container
            .row
                .col-sm-7.col-md-6.col-lg-5.col-xl-4
                    img(src='../../images/greenshop.png', alt='greenshop')
