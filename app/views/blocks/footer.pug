                    div.footer__middle__contact          
                        p
                            i.ml-1.mr-2.fa.fa-mobile.footer__middle__icon-color
                            | Điện thoại : (84-4) 66.558.868 
                        p
                            i.mr-2.fa.fa-envelope-o.footer__middle__icon-color
                            | Email: info@dkt.com.vn
                .col-sm-12.col-md-6.col-lg-3.col-xl-3
                    .footer__middle__title-menu 
                        b THÔNG TIN KHÁCH HÀNG
                    ul
                        each item in customerInfo
                            li.footer__middle__item= item
                .col-sm-12.col-md-6.col-lg-3.col-xl-2
                    .footer__middle__title-menu 
                        b HỔ TRỢ DỊCH VỤ
                    ul
                        each item in supportServices
                            li.footer__middle__item= item              
                .col-sm-12.col-md-6.col-lg-5.col-xl-2
                    .footer__middle__title-menu 
                        b CHÍNH SÁCH ƯU ĐÃI                 
                    ul
                        each item in incentives
                            li.footer__middle__item= item             
                .col-sm-12.col-md-6.col-lg-3.col-xl-1
                    .footer__middle__title-menu 
                        b TIN TỨC   
                    ul
                        each item in news
                            li.footer__middle__item= item           
    .footer__bottom
        .container
            .row
                .col-xl-6
                    ul.footer__bottom__left
                        each item in footerBottom
                            li.footer__bottom__item= item       
                .col-xl-6
                    ul.footer__bottom__right
                        each item in card
                            li.footer__bottom__card(class=item)
